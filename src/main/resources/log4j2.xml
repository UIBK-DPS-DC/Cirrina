<?xml version="1.0" encoding="UTF-8"?>
<configuration packages="pl.tkowalcz.tjahzi.log4j2">
  <Loggers>
    <Root level="DEBUG">
      <AppenderRef ref="Loki"/>
    </Root>
  </Loggers>

  <appenders>
    <Loki name="Loki" bufferSizeMegabytes="64">
      <host>localhost</host>
      <port>3100</port>

      <ThresholdFilter level="ALL"/>
      <PatternLayout>
        <Pattern>[%t] %d{MM-dd HH:mm:ss.SSS} %5p %c{1} - %m%n%exception{full}</Pattern>
      </PatternLayout>

      <Label name="server" value="127.0.0.1"/>

    </Loki>
  </appenders>
</configuration>